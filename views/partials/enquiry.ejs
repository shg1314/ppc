<% include ../partials/stylesheet %>

<div class="enquiry">
    <div class="enquiry_content">
        <h1>문의하기</h1>
        
        <form action="/mailerEnquiry" method="POST">

        <!-- 회사명-->
        <div class="input_enquiry">
                <div class="input_enquiry_1">
                    <input class="enquiry" type="text" id="company" placeholder="회사명">
                </div>
        </div>

        <hr>
        <!--담당자-->
        <div class="left_enquiry">
            <div class="form">
                <input class="enquiry" type="text" id="name" placeholder="담당자 성함">
            </div> 
        </div>
        <div class="right_enquiry">
            <div class="form">
                    <input class="enquiry" type="text" id="contact_title" placeholder="직함">
            </div> 
        </div>
        
        <!-- 연락처 -->
        <div class="left">
            <div class="input_enquiry_1">
                    <input class="enquiry" type="email" id="email1" placeholder="이메일주소">
            </div>
        </div>
        <div class="right">
            <div class="input_enquiry_1">
                    <input class="enquiry" type="text" id="phone" placeholder="전화번호">
        </div>  
        </div>

        <hr>

        <!-- 관심 분야 체크박스-->
        <div class="input_enquiry">
            <P>관심분야</P>
            <div class="column_check1">
                <label class="check">입찰참가자격 등록
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="column_check1">
                <label class="check">공고문 추천/분석
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="column_check2">
                <label class="check">투찰가 분석
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="column_check1">
                <label class="check">적격심사 분석
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="column_check1">
                <label class="check">다수공급자계약
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="column_check2">
                <label class="check">기타 문의
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            
        </div>      

        <!--참고사항 박스-->
        <div class="input_enquiry">
        <p>참고사항</p>
                <div class="text_enquiry">
                    <textarea class="enquiry" id="textarea" placeholder="상담을 위해 저희가 참고하여야할 사항을 자유롭게 작성바랍니다."></textarea>
                </div>
        </div>
        
        <!--문의하기 버튼-->
        <div class="button_bidlist_content">
                <div class="button_bidlist">
                    <button class="bid_list">온라인 문의</button>
                </div>
        </div>
        </form>
    </div>
</div>